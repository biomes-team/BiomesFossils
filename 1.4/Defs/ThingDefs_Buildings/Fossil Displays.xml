<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- =================================== FOSSIL BASES ==========================================-->
	<!-- Templates for future sculptures -->
	<ThingDef ParentName="BMT_FossilAmberSculptureMedBase" Name="BMT_FossilSculptureMedBase" Abstract="True">
		<!-- <defName>BMT_FossilSculptureSmall</defName> -->
		<label>medium displayable fossils</label>
		
		<designationCategory>BMT_Paleontology</designationCategory>
		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
			<texPath>BMT_Fossils/FossilsMedium</texPath>
		</graphicData>
		<costList>
			<BMT_FossilResource>50</BMT_FossilResource>
		</costList>
		<comps>
			<li Class="BMT_Fossils.CompProperties_Display">
				<museumPoints>0.6</museumPoints>
				<isDisplay>true</isDisplay>
			</li>
			<li Class="CompProperties_Styleable"/>
			<li Class="CompProperties_MeditationFocus">
				<statDef>MeditationFocusStrength</statDef>
				<focusTypes>
					<li>Morbid</li>
				</focusTypes>
				<offsets>
					<li Class="FocusStrengthOffset_Quality">
						<curve>
							<points>
								<li>(0,0.12)</li>
								<!-- awful -->
								<li>(1,0.16)</li>
								<!-- poor -->
								<li>(2,0.20)</li>
								<!-- normal -->
								<li>(3,0.22)</li>
								<!-- good -->
								<li>(4,0.24)</li>
								<!-- excellent -->
								<li>(5,0.26)</li>
								<!-- masterwork -->
								<li>(6,0.28)</li>
								<!-- legendary -->
							</points>
						</curve>
					</li>
					<li Class="FocusStrengthOffset_BuildingDefsWithQuality">
						<defs>
							<li>BMT_FossilSculptureMedium</li>
						</defs>
						<radius>9.9</radius>
						<maxBuildings>8</maxBuildings>
						<focusPerQuality>
							<points>
								<li>(0,0.0)</li>
								<!-- awful -->
								<li>(1,0.0)</li>
								<!-- poor -->
								<li>(2,0.01)</li>
								<!-- normal -->
								<li>(3,0.01)</li>
								<!-- good -->
								<li>(4,0.01)</li>
								<!-- excellent -->
								<li>(5,0.02)</li>
								<!-- masterwork -->
								<li>(6,0.02)</li>
								<!-- legendary -->
							</points>
						</focusPerQuality>
						<explanationKey>MeditationFocusPerSculpture</explanationKey>
						<explanationKeyAbstract>MeditationFocusPerSculptureAbstract</explanationKeyAbstract>
					</li>
				</offsets>
			</li>
		</comps>
	</ThingDef>
