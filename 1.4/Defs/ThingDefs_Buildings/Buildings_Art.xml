  <ThingDef ParentName="BuildingBase" Name="BMT_FossilAmberSculptureBase" Abstract="True">
	<thingClass>Building_Art</thingClass>
	<altitudeLayer>Building</altitudeLayer>
	<passability>PassThroughOnly</passability>
	<pathCost>50</pathCost>
	<useHitPoints>true</useHitPoints>
	<minifiedDef>MinifiedThing</minifiedDef>
	<thingCategories>
	  <li>BMT_FossilCategory</li>
	</thingCategories>
	<thingSetMakerTags><li>RewardStandardLowFreq</li></thingSetMakerTags>
	<statBases>
	  <Flammability>1.0</Flammability>
	  <SellPriceFactor>1.10</SellPriceFactor>
	  <MeditationFocusStrength>0.0</MeditationFocusStrength>
	</statBases>
	<comps>
	  <li>
		<compClass>CompQuality</compClass>
	  </li>
	  <li Class="CompProperties_Art">
		<nameMaker>NamerArtSculpture</nameMaker>
		<descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
		<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
	  </li>
	  <li Class="CompProperties_Styleable"></li>
	</comps>
	<placeWorkers>
	  <li>PlaceWorker_MeditationOffsetBuildingsNear</li>
	</placeWorkers>
	<inspectorTabs>
	  <li>ITab_Art</li>
	</inspectorTabs>
	<tradeTags>
	  <li>Art</li>
	  <li>BMT_FossilTrade</li>
	</tradeTags>
	<recipeMaker>
	  <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	  <workSkill>Artistic</workSkill>
	  <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
	  <effectWorking>Sculpt</effectWorking>
	  <soundWorking>Recipe_Sculpt</soundWorking>
	  <recipeUsers>
		<li>BMT_TablePaleontology</li>
	  </recipeUsers>
	  <defaultIngredientFilter>
		<categories>
		  <li>Root</li>
		</categories>
		<disallowedThingDefs>
		  <li>Gold</li>
		  <li>Silver</li>
		  <li>Plasteel</li>
		  <li>Jade</li>
		  <li>Uranium</li>
		</disallowedThingDefs>
	  </defaultIngredientFilter>
	</recipeMaker>
	<ideoBuildingNamerBase MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoSculpture</ideoBuildingNamerBase>
	<ritualFocus>
	  <spectateDistance>2</spectateDistance>
	  <allowedSpectateSides>Down</allowedSpectateSides>
	</ritualFocus>
	<building>
	  <paintable>true</paintable>
	</building>
  </ThingDef>

  <ThingDef ParentName="BMT_FossilAmberSculptureBase" Name="BMT_FossilAmberSculptureSmallBase" Abstract="True">
	<!-- <defName>BMT_AmberSculptureSmall</defName> -->
